<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Button
    android:id="@+id/btn_pop_pic_select"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_toStartOf="@+id/btn_pop_qq"
    android:text="照片选取"
    android:textColor="#3c3c3c"
    android:textSize="14sp"
    />
    <Button
        android:id="@+id/btn_pop_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="仿qq关注'删除"
        android:textColor="#3c3c3c"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/btn_pager_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btn_pop_qq"
        android:text="图片轮播"
        android:textColor="#3c3c3c"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_pop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pop_pic_select"
        android:layout_centerHorizontal="true"
        android:text="向下弹出"
        android:textColor="#3c3c3c"
        android:textSize="14sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_card_view"
            />

    </androidx.cardview.widget.CardView>
</RelativeLayout>